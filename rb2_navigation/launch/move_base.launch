<?xml version="1.0"?>
<launch>
  <!-- TEB LOCAL PLANNER -->
  <arg name="prefix" default="robot_"/> 
  <arg name="cmd_vel_topic" default="move_base/cmd_vel"/> <!-- using twist mux -->
  <arg name="odom_topic" default="robotnik_base_control/odom"/>
  <arg name="global_frame" default="$(arg prefix)map"/>
  <arg name="odom_frame" default="$(arg prefix)odom"/>
  <arg name="base_frame" default="$(arg prefix)base_footprint"/>
  <arg name="scan_topic" default="front_laser/scan"/>

  <arg name="local_planner" default="$(optenv ROBOT_LOCAL_PLANNER eband)" />
  <!-- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" > <!-- launch-prefix="gdb - -args" -->
      <!-- global planner params -->
      <!--rosparam file="$(find rb2_navigation)/config/global_planner_params.yaml" command="load" /-->

      <rosparam file="$(find rb2_navigation)/config/move_base_params.yaml" command="load" />
      <rosparam file="$(find rb2_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find rb2_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find rb2_navigation)/config/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find rb2_navigation)/config/global_costmap_params_map.yaml" command="load" />
      <rosparam file="$(find rb2_navigation)/config/$(arg local_planner)_local_planner_params.yaml" command="load" />
      <!-- reset frame_id parameters using user input data -->
      <param name="global_costmap/obstacle_layer/front_laser/sensor_frame" value="$(arg prefix)front_laser_link"/>
      <param name="local_costmap/obstacle_layer/front_laser/sensor_frame" value="$(arg prefix)front_laser_link"/>
      <param name="global_costmap/obstacle_layer/rear_laser/sensor_frame" value="$(arg prefix)rear_laser_link"/>
      <param name="local_costmap/obstacle_layer/rear_laser/sensor_frame" value="$(arg prefix)rear_laser_link"/>

      <param name="local_costmap/global_frame" value="$(arg odom_frame)"/>
      <param name="local_costmap/robot_base_frame" value="$(arg base_frame)"/>
      <param name="global_costmap/global_frame" value="$(arg global_frame)"/>
      <param name="global_costmap/robot_base_frame" value="$(arg base_frame)"/>

      <param if="$(eval local_planner == 'teb')" name="TebLocalPlannerROS/map_frame" value="$(arg global_frame)"/>

      <remap from="cmd_vel" to="$(arg cmd_vel_topic)" />
      <remap from="odom" to="$(arg odom_topic)" /> >
  </node>

</launch>
